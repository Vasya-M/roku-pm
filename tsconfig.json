{
    "compilerOptions": {
      "noImplicitAny": false,
      "target": "ES2017",
      "module": "commonjs",
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist",
      "strict": false,
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2017",
        "es2019.array",
        "ES2021.String"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/**/*"
    ],
    "ts-node": {
      "transpileOnly": true
    }
  }